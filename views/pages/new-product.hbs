<form action="/products" method="POST">
    <div class="col-md-5">
        <div class="form-group">
            <input type="text" placeholder="Brand" class="form-control" name="brand">
        </div>
        <div class="form-group">
            <input type="text" placeholder="Model" class="form-control" name="model">
        </div>
        <div class="form-group">
            <input type="text" placeholder="Price" class="form-control" name="price">
        </div>
        <div class="form-group">
            InStock:
            <input type="checkbox" name="inStock">
        </div>
        <div class="form-group">
            <button class="btn btn-success" type="submit">Save Product</button>
        </div>
    </div>
</form>